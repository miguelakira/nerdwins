<% if notice %>
<p id = "notice"> <%= notice %> </p>
<% end %>

<h1> Catálogo da nerd_wins </h1>
 
<% if session[:counter] > 5 %>
<p>Você nos visitou <%= pluralize(session[:counter], "vez", "vezes") %>!</p>
<% end %>
<% @products.each do |product| %>
  <div class = "entry">
    <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post %>
    <h3><%= product.title %></h3>
    <p><%= sanitize(product.description) %></p>
    <div class = "price_line">
      <span class = "price"><%= number_to_currency(product.price) %></span>
      <%= button_to "Colocar no Carrinho", line_items_path(:product_id => product) %>
    </div>
  </div>
<% end %>
